<div class="row main_panel_container">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading center_text"><h3 class="panel-title">Account Settings</h3></div>
      <div class="panel-body">
        <%= form_for @user, :html=> { :multipart => true} do |f| %>
          <div class="row">
            <div class="col-xs-6">
              <%= f.label :email, "Email" %>  
              <%= f.text_field :email, :class => "form-control", :value => @user.email %>
            </div>
            <div class="col-xs-6">
              <br/><br/>
              <%= f.check_box :updates_news, {}, true, false %>
              <%= f.label :updates_news, "Recieve Accent Realty Updates" %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-xs-6">
              <%= f.label :firstname, "First Name" %>  
              <%= f.text_field :firstname, :class => "form-control", :value => @user.firstname %> 

              <%= f.label :firstname, "Last Name" %> 
              <%= f.text_field :lastname, :class => "form-control", :value => @user.lastname %> 
            </div>
            <div class="col-xs-6">
              <%= f.label :password, "New Password" %>
              <%= f.password_field :password, :class => "form-control" %>

              <%= f.label :password_confirmation, "Confirm New Password" %>
              <%= f.password_field :password_confirmation, :class => "form-control" %>
            </div>
          </div>
          <hr>
          <%= f.submit 'Save', :class => "btn btn-warning pull-right" %>
        <% end %>
        <%= button_to "Deactivate Account", user_path(@user), :method => :delete, :class => "btn btn-danger pull-right btn_spacer", 
                                                              :confirm => "Are you sure you want to deactivate your account?" %>
       </div>
    </div>
  </div>
</div>