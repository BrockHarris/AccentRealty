<%= form_for @new_user, :html=> { :multipart => true} do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <%= f.text_field :email, :placeholder => "Email" %> <br/>
  <%= f.text_field :firstname, :placeholder => "Firt name" %> <br/>
  <%= f.text_field :lastname, :placeholder => "Last name" %> <br/>
  <%= f.password_field :password, :placeholder => "Password" %><br/>
  <%= f.password_field :password_confirmation, :placeholder => "Confirm Password" %><br/>

  <%= f.check_box :updates_news, {}, true, false %>
	<%= f.label "Recieve news updates" %><br/>

	<%= f.check_box :updates_blog_posts, {}, true, false %>
	<%= f.label "Recieve blog notifications" %><br/>

  <%= f.submit 'Submit' %>
<% end %>