<div class="row main_panel_container">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Search results for "<%= params[:search] %>"</h3>
      </div>
      <div class="panel-body">
		    <div class="list-group">
          <% @results.each do |blogpost| %>
            <a href="/blogposts/<%= blogpost.id %>" class="list-group-item">
              <h4 class="list-group-item-heading"><%= blogpost.title %></h4>
              <p class="list-group-item-text"><%= truncate(blogpost.body, length: 300) %></p>
            </a>
          <% end %>
        </div>
	    </div>
    </div>
  </div>
</div>