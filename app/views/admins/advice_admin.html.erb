<div class="row main_panel_container">
  <div class="col-xs-5 col-xs-offset-2">
  	<div class="page_preview">
    	<div class="page_preview_header">Column Preview</div>
    	<div class="page_preview_main">
    		<div class="panel-group" id="accordion">

    			<% unless @page_header.empty? %>
    				<% @page_header.each do |pagecontent| %>
   						<div class="panel panel-default">
     						<div class="panel-heading">
									<h3 class="panel-title"><%= pagecontent.page_header %></h3>
        					<a data-toggle="collapse" data-parent="#accordion" class="panel_edit_link" href="#collapse<%= pagecontent.id %>">Edit</a> 
      					</div>
      					<div id="collapse<%= pagecontent.id %>" class="panel-collapse collapse">
       						<div class="panel-body">
										<%= form_for pagecontent, :html=> { :multipart => true} do |f| %>
         							<%= f.hidden_field :page_type, :value => '4' %>
         			  			<%= f.hidden_field :is_header, :value => true %>
          						<div class="row">
          							<div class="col-xs-10">
          								<%= f.text_field :page_header, :class => "form-control", :value => pagecontent.page_header %>
         								</div>
         								<div class="col-xs-2">
           								<%= f.submit 'Save', :class => "btn btn-warning pull-right" %>
           							</div>
         							</div>
         						<% end %>
        					</div>
      					</div>
    					</div>
    				<% end %>

    			<% else %>

    				<div class="panel panel-default">
      				<div class="panel-heading">
								<h3 class="panel-title">Useful Articles</h3>
       					<a data-toggle="collapse" data-parent="#accordion" class="panel_edit_link" href="#collapseOne">Edit</a> 
     					</div>
     					<div id="collapseOne" class="panel-collapse collapse">
        				<div class="panel-body">
									<%= form_for @pagecontent, :html=> { :multipart => true} do |f| %>
         						<%= f.hidden_field :page_type, :value => '4' %>
         						<%= f.hidden_field :is_header, :value => true %>
         						<div class="row">
         							<div class="col-xs-10">
         								<%= f.text_field :page_header, :class => "form-control", :placeholder => "Change Column Header" %>
         							</div>
           						<div class="col-xs-2">
            						<%= f.submit 'Save', :class => "btn btn-warning pull-right" %>
           						</div>
         						</div>
         					<% end %>
       					</div>
     					</div>
   					</div>
   				<% end %>

    			<% unless @pagecontents.empty? %>
    				<% @pagecontents.each do |pagecontent| %>
    					<div class="panel panel-default" style="background-color:#FFF; margin:15px;" >
      					<div class="panel-heading" style="background-color:#FAFAFA;" >
      						<h3 class="panel-title"><%= pagecontent.article_title %></h3>
             			<a data-toggle="collapse" data-parent="#accordion" class="panel_edit_link" href="#collapse<%= pagecontent.id %>">Edit</a> 
             			<div class="panel_section_body"><%= pagecontent.article_description %>
             				<% unless pagecontent.article_link.blank? %>
             					<hr class="small_hr"><b>Link:</b> <%= pagecontent.article_link %>
             				<% end %>
             			</div>
      					</div>
     						<div id="collapse<%= pagecontent.id %>" class="panel-collapse collapse">
        					<div class="panel-body">
										<%= form_for pagecontent, :html=> { :multipart => true} do |f| %>
         							<%= f.hidden_field :page_type, :value => '4' %>
         							<%= f.hidden_field :is_header, :value => false %>
         							<%= f.text_field :article_title, :class => "form-control", :value => pagecontent.article_title %><br/>
											<%= f.text_field :article_description, :class => "form-control", :value => pagecontent.article_description %><br/>
											<%= f.text_field :article_link, :class => "form-control", :value => pagecontent.article_link %><br/>
           						<%= f.submit 'Save', :class => "btn btn-warning pull-right" %>
          					<% end %>
          					<%= button_to "Delete", pagecontent_path(pagecontent), :method => :delete, :class => "btn btn-danger pull-right btn_spacer", 																										 :confirm => "Are you sure you want to delete this?" %>
        					</div>
      					</div>
    					</div>
    				<% end %>
 
    			<% else %>

    				<div class="center_text padding_15">No Column Content</div>
   				<% end %>

    			<div class="panel panel-default" style="background-color:#FFF; margin:15px;">
     				<div class="panel-heading" style="background-color:#FAFAFA;">
      				<h3 class="panel-title">
      					<span class="glyphicon glyphicon-plus"></span>
           			<a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">New Article</a>
         			</h3>	
       			</div>
     				<div id="collapseTwo" class="panel-collapse collapse">
        			<div class="panel-body">
								<%= form_for @pagecontent, :html=> { :multipart => true} do |f| %>
          				<%= f.hidden_field :page_type, :value => '4' %>
          				<%= f.hidden_field :is_header, :value => false %>
          				<%= f.text_field :article_title, :class => "form-control", :placeholder =>"Title" %><br/>
									<%= f.text_field :article_description, :class => "form-control", :placeholder =>"Description" %><br/>
									<%= f.text_field :article_link, :class => "form-control", :placeholder =>"URL Link (optional)" %><br/>
           				<%= f.submit 'Save', :class => "btn btn-warning pull-right" %>
       					<% end %>
      				</div>
    				</div>
    			</div>
    		</div>
  		</div>
  	</div>
  </div>
  <div class="col-xs-3 col-xs-offset-2">
    <%= render 'admins/admin_sidebar' %>
  </div>
</div>