<div class="panel panel-default">
  <div class="panel-heading">
  	<h3 class="panel-title">Create a new blog post</h3>
  </div>
  <div class="panel-body">
    
<%= form_for @blogpost, :html=> { :multipart => true} do |f| %>
  <%= f.text_field :title, :class => "form-control", :placeholder => "Post title" %><br/>
  <%= f.text_area :body, :class => "form-control", :placeholder => "Post body" %><br/>
  <%= f.hidden_field :admin_id, :class => "form-control", :value => admin_user.id %>
  <%= f.submit 'Post', :class => "btn btn-warning pull-right" %>
<% end %>
  </div>
</div>

