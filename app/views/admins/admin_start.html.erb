<div class="row">
  <div class="placeholder_login_panel center">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title center_text">Admin Panel Sign in</h3>
      </div>
      
      <div class="panel-body">
        <div class="form-group sm_form_width center">
          <%= form_for(:session, url: adminsessions_path) do |f| %>
          <%= f.text_field :login, :placeholder => "Email or username", :class => "form-control" %><br/>
          <%= f.password_field :password, :placeholder => "Password", :class => "form-control" %><br/>
  <%= f.submit "Sign in", :class => "btn btn-warning" %>
<% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= form_for @new_admin, :html=> { :multipart => true} do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <%= f.text_field :username, :placeholder => "Username" %><br/>
  <%= f.text_field :email, :placeholder => "Email" %> <br/>
  <%= f.text_field :firstname, :placeholder => "Firt name" %> <br/>
  <%= f.text_field :lastname, :placeholder => "Last name" %> <br/>
  <%= f.password_field :password, :placeholder => "Password" %><br/>
  <%= f.password_field :password_confirmation, :placeholder => "Confirm Password" %><br/>
  <%= f.submit 'Register' %>
<% end %>
<p/>




