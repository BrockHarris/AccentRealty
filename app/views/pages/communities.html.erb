              <% @middlesex_communities.each do |community| %>
                <%= link_to community.city, community, :class=>"city_links" %><br/>
              <% end %>
            </div>

            <div class="col-xs-4">
              <h4 class="community_header">Litchfield</h4>
              <% @litchfield_communities.each do |community| %>
                <%= link_to community.city, community, :class=>"city_links" %><br/>
              <% end %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>